<!DOCTYPE html>
<html>
<head>
  <title>Property Map App</title>
  <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_GOOGLE_MAPS_API_KEY"></script>
</head>
<body>
  <h1>Property Information</h1>
  <% if @error_message %>
    <p><%= @error_message %></p>
  <% end %>
  <form action="/property_info" method="post">
    <label for="address">Enter Property Address:</label>
    <input type="text" id="address" name="address">
    <input type="submit" value="Get Property Info">
  </form>
  <div id="map" style="width: 100%; height: 400px;"></div>
  <script>
    var map;
    function initMap() {
      var propertyLocation = { lat: LATITUDE, lng: LONGITUDE }; // Replace with actual coordinates
      map = new google.maps.Map(document.getElementById('map'), {
        center: propertyLocation,
        zoom: 15
      });
      var marker = new google.maps.Marker({
        position: propertyLocation,
        map: map,
        title: 'Property Location'
      });
    }
  </script>
  <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=YOUR_GOOGLE_MAPS_API_KEY&callback=initMap">
  </script>
</body>
</html>
